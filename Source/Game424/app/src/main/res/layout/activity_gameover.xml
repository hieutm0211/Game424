<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="@drawable/color_orange_hibicus">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:paddingStart="70dp"
        android:paddingEnd="70dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You Lose"
            android:textColor="#fff"
            android:textSize="45dp"
            android:id="@+id/tv_title"
            android:layout_centerHorizontal="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Score"
            android:layout_below="@+id/tv_title"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:textColor="#fff"
            android:textSize="30dp"
            android:id="@+id/tv_score"
            />
        <Button
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:background="@drawable/welcome_button_background"
            android:layout_below="@+id/tv_score"
            android:layout_marginTop="65dp"
            android:id="@+id/btn_replay"
            android:text="Replay"
            android:textColor="#fff"
            android:layout_centerHorizontal="true"
            />
        <Button
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:text="High Score"
            android:background="@drawable/welcome_button_background"
            android:textColor="#fff"
            android:layout_below="@id/btn_replay"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:id="@+id/btn_highscore"
            />
    </RelativeLayout>
</RelativeLayout>