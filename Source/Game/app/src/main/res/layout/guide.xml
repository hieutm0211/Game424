<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.john.waveview.WaveView android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:background="#fff"
        app:above_wave_color="@color/BruschettaTomato"
        app:blow_wave_color="@color/Orange"
        app:progress="80"
        app:wave_height="little"
        app:wave_hz="normal"
        app:wave_length="large"
        android:id="@+id/background_percent"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:textSize="40dp"
        android:text="Guide"
        android:textColor="@color/Coral"
        android:textStyle="bold"
        android:id="@+id/tv_title"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginTop="70dp"
        android:layout_below="@id/tv_title"
        android:layout_centerHorizontal="true"
        android:textSize="18dp"
        android:id="@+id/tv_guide"
        android:textColor="@color/Orange"
        android:layout_marginLeft="10dp"
        android:layout_marginEnd="10dp"

        />
</RelativeLayout>