<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/container"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <com.john.waveview.WaveView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:above_wave_color="@color/BruschettaTomato"
        app:blow_wave_color="@color/Orange"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="GAME 424"
        android:textAlignment="center"
        android:textSize="50dp"
        android:textColor="@color/BruschettaTomato"
        android:layout_centerHorizontal="true"
        android:id="@+id/tv_title"
        android:textAllCaps="true"
        android:layout_marginTop="35dp"
        android:textStyle="bold"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Version 2.1.3"
        android:layout_below="@id/tv_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/textview_gameover_wingame_level"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textColor="@color/Coral"
        android:id="@+id/tv_version"
        />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        >


        <Button
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:background="@drawable/button_welcome"
            android:layout_marginTop="55dp"
            android:text="Play"
            android:textColor="@color/Orange"
            android:textSize="20dp"
            android:id="@+id/btn_play"
            android:layout_centerHorizontal="true"
            android:onClick="click_play"
            />
        <Button
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:id="@+id/btn_highscore"
            android:text="High score"
            android:layout_below="@id/btn_play"
            android:background="@drawable/button_welcome"
            android:layout_marginTop="5dp"
            android:textColor="@color/Orange"
            android:textSize="20dp"
            android:layout_centerHorizontal="true"
            android:onClick="click_highscore"
            />

        <Button
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_below="@id/btn_highscore"
            android:id="@+id/btn_guide"
            android:layout_marginTop="5dp"
            android:background="@drawable/button_welcome"
            android:text="Guide"
            android:textColor="@color/Orange"
            android:textSize="20dp"
            android:layout_centerHorizontal="true"
            android:onClick="click_guide"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_copyright"
            android:textSize="12dp"
            android:text="Copyright 2018"
            android:layout_below="@id/btn_guide"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:textColor="@color/Coral"
            />

    </RelativeLayout>


    <Button
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/button_welcome"
        android:id="@+id/btn_about"
        android:textColor="@color/Orange"
        android:textSize="20dp"
        android:text="About"
        android:onClick="click_about"
        />

</RelativeLayout>